<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_selected="true" >
        <shape 
            xmlns:android="http://schemas.android.com/apk/res/android" 
            android:shape="rectangle" >

			<gradient
				android:angle="45"
				android:centerColor="#533DAB"
		   		android:centerX="50%"
		    	android:startColor="#3A3075"
				android:endColor="#3A3075"
				android:type="linear" />

			<size
				android:width="270dp"
				android:height="60dp" />
			
			<stroke
				android:width="3dp"
				android:color="#454545" />
			
		</shape>
     </item>
     <item>
        <shape 
            xmlns:android="http://schemas.android.com/apk/res/android" 
            android:shape="rectangle" >
			
			<gradient
				android:angle="45"
				android:centerColor="#654ACF"
		   		android:centerX="50%"
		    	android:startColor="#6351C7"
				android:endColor="#6351C7"
				android:type="linear" />

			<size
				android:width="270dp"
				android:height="60dp" />
			
		</shape>
     </item>
</selector>